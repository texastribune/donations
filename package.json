{
  "name": "donations",
  "description": "Collect donations for nonprofits",
  "scripts": {
    "js:dev": "NODE_ENV=development webpack --config webpack/config.dev.js",
    "dev": "yarn run js:dev",
    "postinstall": "NODE_ENV=production webpack --config webpack/config.prod.js",
    "lint": "eslint --ext .js,.vue static/js/src"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/salesforce-stripe"
  },
  "bugs": {
    "url": "https://github.com/texastribune/salesforce-stripe/issues"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.4.3",
    "autoprefixer": "^9.4.2",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.0",
    "css-loader": "^0.28.11",
    "es6-promise": "^4.2.4",
    "fast-async": "7",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nodent-runtime": "^3.2.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "validate.js": "^0.12.0",
    "vue": "^2.5.16",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.0.1",
    "vue-stripe-elements-plus": "0.2.8",
    "vue-template-compiler": "^2.5.16",
    "vuex": "^3.0.1",
    "webpack": "^4.5.0",
    "webpack-assets-manifest": "^3.0.1",
    "webpack-cli": "^2.0.14",
    "webpack-merge": "^4.1.2",
    "webpack-sources": "^1.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-eslint-parser": "^4.0.2"
  },
  "license": "MIT",
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "iOS >= 11",
    "Safari >= 11",
    "not dead"
  ],
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "vue-eslint-parser",
    "extends": [
      "plugin:vue/recommended",
      "airbnb-base",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "no-console": "error",
      "vue/component-name-in-template-casing": [
        "error",
        "kebab-case"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
