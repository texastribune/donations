{
  "name": "donations",
  "description": "Collect donations for nonprofits",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/donations"
  },
  "bugs": {
    "url": "https://github.com/texastribune/donations/issues"
  },
  "browserslist": [
    "last 2 versions",
    "firefox ESR",
    "iOS >= 12",
    "safari >= 12",
    "samsung >= 12",
    "not ie 11",
    "not dead"
  ],
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "css:dev": "NODE_ENV=development node config/tasks/dev.js",
    "css:prod": "NODE_ENV=production node config/tasks/build.js",
    "js:dev": "NODE_ENV=development webpack --config webpack/config.dev.js",
    "js:prod": "NODE_ENV=production webpack --config webpack/config.prod.js",
    "dev": "npm-run-all --parallel css:dev js:dev",
    "postinstall": "npm run css:prod && npm run js:prod",
    "lint": "eslint --ext .js,.vue static/js/src config"
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.14.1",
    "@babel/runtime": "^7.4.3",
    "@sentry/browser": "^5.6.0",
    "@sentry/integrations": "^5.6.0",
    "@sentry/webpack-plugin": "^1.6.2",
    "@texastribune/queso-tools": "^2.1.0",
    "@texastribune/queso-ui": "^9.4.2",
    "auth0-js": "^9.13.2",
    "axios": "^0.21.1",
    "babel-loader": "^8.0.0",
    "camelcase": "^5.3.1",
    "clean-webpack-plugin": "^2.0.2",
    "css-loader": "^1.0.0",
    "date-fns": "^1.30.1",
    "dompurify": "^2.0.17",
    "es6-promise": "^4.2.4",
    "fast-async": "7",
    "file-loader": "^1.1.11",
    "glob-watcher": "^5.0.3",
    "jsonwebtoken": "^8.5.1",
    "jspdf": "^2.3.1",
    "nodent-runtime": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "validate.js": "^0.12.0",
    "vee-validate": "^3.2.1",
    "vue": "^2.6.0",
    "vue-clipboard2": "^0.3.0",
    "vue-js-modal": "^1.3.31",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.0.1",
    "vue-stripe-elements-plus": "0.2.8",
    "vue-template-compiler": "^2.6.0",
    "vuex": "^3.0.1",
    "webpack": "^4.40.0",
    "webpack-assets-manifest": "^3.0.1",
    "webpack-cli": "^3.3.4",
    "webpack-merge": "^4.1.2",
    "webpack-sources": "^1.0"
  },
  "devDependencies": {
    "acorn": "^7.4.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-eslint-parser": "^4.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/recommended",
      "airbnb-base",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "no-console": "error",
      "vue/component-name-in-template-casing": [
        "error",
        "kebab-case"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
